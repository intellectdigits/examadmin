                        <a class="dropdown-item" href="#"  ><span id="course"  > Action4</span></a>
                      </div>
                    </div>
                    <input type="text" id="setcourse" class="form-control" aria-label="Text input with dropdown button">
                  </div>
                </div></div>
                <div class="col-lg-6">  <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Academic Session</label>
                  <input type="text" id="datepicker"  class="form-control" /></p></div>
                  <script>function filterFunction() {
                    var input, filter, ul, li, a, i;
                    input = document.getElementById("myInput");
                    filter = input.value.toUpperCase();
                    div = document.getElementById("myDropdown");
                    a = div.getElementsByTagName("a");
                    for (i = 0; i < a.length; i++) {
                      txtValue = a[i].textContent || a[i].innerText;
                      if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        a[i].style.display = "";
                      } else {
                        a[i].style.display = "none";
                      }
                    }
                  }
                  const colorSelectors = document.querySelector("#myDropdown");
                  
                  /* define event listeners */
                  const loadEventListeners = () => {
                  
                      colorSelectors.addEventListener("click", (e) => {
                          e.preventDefault();
                      
                          $("#setcourse").val(e.target.innerText)
                              $("#deptcourses").text(`Department of ${e.target.innerText} Courses`)
                      });
                  }
                  
                  /* Load all event listeners */
                  loadEventListeners();
                  </script>
            </div>
            
            <div class="row">
              <br/>
              <div ><h1 id="department">Department of Biology</h1></div>
                   <h2 class="title-1 m-b-25"></h2>
                   <div class="table table-bordered p-0">
                       
                       <table border="1" class="table ">
                           <thead class="thead-dark">
                               <tr>
                                   <th>Student_Name</th>
                                   <th>Registration Number</th>
                                   <th>Current Academic Level</th>
                                   <th>Actions</th>
                                 
                               </tr>
                           </thead>
                           <tbody id="tbody">
                               <% if(typeof model!= 'undefined') {
                                   %>
                                   <% for (const cat of model) { %>
                                      <tr> <td>
                                       <div id="uuid" hidden><%= cat.id%></div>
                                         <input id="level" class="form-control" value=" <%= cat.stud_name %>" type="text" name="username" placeholder="Level">  
                                      </td> <td>
                                       
                                       <input id="reg_no" class="form-control" value="<%= cat.reg_no %>" type="text" name="username" placeholder="Level">  
                                   
                                    </td> <td>
                                      
                                       <input id="level" class="form-control" value=" <%= cat.level%>" type="text" name="username" placeholder=">Current Academic Level">  
                                     
                                    </td><td><button type="button" class="btn btn-success">Save Changes</button>
                                      <button type="button" id="delete"class="btn btn-inverse-dark btn-icon">
                                        <i class="icon-trash"></i></button></td> </tr>
                                     <% } %>
                                   
                                   <%}%>
                                  
                           </tbody>
                       </table>
                       <div class="d-flex mt-4 flex-wrap"  id="pagination">
 
                           <nav class="ml-auto" id="cc">
                             <ul class="pagination separated pagination-info" id="pages">
