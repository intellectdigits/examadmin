        <div class="main-panel">
          <div class="content-wrapper">
         <br>

              <div class="row">
               
                <div class="col-lg-6">  <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Department</label>  <div class="form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filter By Department</button>
                      <div class="dropdown-menu" id="myDropdown">
                      <input type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()">
                        <a class="dropdown-item" href="#" ><span  id="course" > Action1</span></a>
                        <a class="dropdown-item" href="#"  ><span id="course"  > Action2</span></a>
