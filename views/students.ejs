    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  
    <script>
      $(document).ready(function(){
        
        $("#datepicker").datepicker({
    format: "yyyy",
    viewMode: "years", 
    minViewMode: "years"
});
        $.ajax({
          type: "GET",
          url: "/getdept",
        
          success(response) {
            $("#myDropdown").empty();
            $("#myDropdown").append(`<input type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()">`)
            $.each(response, function (key, value) { 
                           
                                  
                                                $("#myDropdown").append(` 
                           
                            <div role="separator" class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#"  ><span id="course"  >${value["dept"]}</span></a>`);
                            $("#setcourse").val(value["dept"])
                    
                                              });
                                           
                                              $("#department").text(`Department of ${$("#setcourse").val()} ${$("#datepicker").val()} Session`) 
                                              getstud(); 
                            
          },
      }); 
      function getstud(offset=0){
        $("#datepicker").val("2006")
        $.ajax({
          type: "POST",
          url: "/filterdata",
          data:{dept:$("#setcourse").val(),session:$("#datepicker").val(),offset:offset},
          success(response) {

    var c=1;
   var i=0;
   $("#tbody").empty()
   $("#pages").empty();
       $("#pages").append(  ` <li class="page-item"><a  class="page-link"><i class="icon-arrow-left"></i></a></li>`)
   $.each(response, function (key, value) { 
     i=i+1;
        
         if(i%4==0){
           if(c>0){
           $("#pages").append(  `<li class="page-item " id="currentpage" ><a href="# id="page" class="page-link">${c}</a></li>`)
           c=c+1;
         
           }
         }                   
   
         $("#tbody").append(`<tr> <td>
                                       <div id="uuid" hidden>${value["id"]}</div>
                                         <input id="stud_name" class="form-control" value="${value["stud_name"]}" type="text" name="username" placeholder="Level">  
                                      </td> <td>
                                       
                                       <input id="reg_no" class="form-control" value="${value["reg_no"]}" type="text" name="username" placeholder="Level">  
                                   
                                    </td> <td>
                                      
                                       <input id="level" class="form-control" value="${value["level"]}" type="text" name="username" placeholder=">Current Academic Level">  
                                     
                                    </td><td><button id="save" type="button" class="btn btn-success">Save Changes</button>
                                      <button type="button" id="delete"class="btn btn-inverse-dark btn-icon">
                                        <i class="icon-trash"></i></button></td> </tr>`);
                     });
                     $("#pages").append(  ` <li class="page-item"><a  class="page-link"><i class="icon-arrow-right"></i></a></li>`)
 }
      }); 
      }
          $(document).on("click","#delete",function(){
           //   alert("gfgf")
              let id=$(this).closest('tr').find('#uuid').text();
              $.ajax({
        type: "POST",
        url: "/delstud",
        data:{id:id},
        success(data) {
      
         location.reload();
       
                          
        },
    });  
          }); 
  getstud()     
  $(document).on("click","#currentpage",function(){
 
      getstud(offset=parseInt($(this).text())*parseInt($(this).text()));

     
    })    
$(document).on("change","#datepicker",function(){
 
$("#department").text(`Department of ${$("#setcourse").val()} ${$("#datepicker").val()} Session`)
getstud() 
})
        $("#addcat").click(function(){
          let level=$("#level").val();
          let stud_name=$("#stud_name").val();
          let dept=$("#setcourse").val();
          let reg_no=$("#reg_no").val();
          let session=$("#datepicker").val();
          if(level!='' &&stud_name!=''&&dept!=''){
            
          $.ajax({
        type: "POST",
        url: '/addstudent',
        data:{level:level,stud_name:stud_name,dept:dept,reg_no:reg_no,session:session},
        success(data) {
       
         location.reload();
       
                          
        },
    });}else{alert("enter value in all fields")}
        })
        $(document).on("click","#save",function(){
         
         let id=$(this).closest('tr').find('#uuid').text();
         let reg_no=$(this).closest('tr').find('#reg_no').val();
         let level=$(this).closest('tr').find('#level').val();
     
         let stud_name=$(this).closest('tr').find('#stud_name').val().trim();
         
         if(stud_name!=''&&reg_no!=''&& level!=''){
          
         $.ajax({
       type: "POST",
       url: "/updatestud",
       data:{id:id,reg_no:reg_no,level:level,stud_name:stud_name},
       success(data) {
     location.reload()
  
                         
       },
   });}else{alert("enter value in all fields")}
       }) 
      })
  </script>
